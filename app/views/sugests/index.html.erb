<%= provide :title, t(".title") %>
<div id="contact-page" class="container">
  <div class="bg">
    <div class="row">
      <div class="col-md-12">
        <div class="contact-form">
          <h2 class="title text-center"><%= t("label.suggestion")%></h2>
          <div class="status alert alert-success" style="display: none"></div>
          <%= form_for :sugest, url:sugests_path do |f| %>
            <div class="form-group col-md-1">
              <%= f.label :label_category, "Categories" %>
            </div>
            <div class="form-group col-md-3">
              <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name") %>
            </div>
            <div class="form-group col-md-12">
              <%= f.text_field :name, placeholder: t("suggestions.placeholder_title"), class: "form-control" %>
            </div>
            <div class="form-group col-md-12">
              <%= f.text_area :description, placeholder: t("suggestions.placeholder_text_area"),
              rows: 8, class: "form-control" %>
            </div>
            <%= f.submit t("label.submit"), class: "btn btn-primary pull-right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!--/#contact-page-->
