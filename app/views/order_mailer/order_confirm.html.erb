 <table class="table table-striped">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".quantity" %></th>
      <th><%= t ".subtotal" %></th>
      <th><%= t ".status" %></th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |ot| %>
    <tr>
      <td><%= ot.product.name %></td>
      <td><%= ot.quantity %></td>
      <td><%= ot.subtotal %></td>
      <td><%= @order.status %></td>
    </tr>
    <% end %>
    <tr>
      <td colspan="3">
        <b><%= t ".member" %>: <i><%= @order.user_name %></i> -- </b>
        <b>Total price: </b>
        <span><%= number_to_currency(@order.total_price) %></span><br>
        <b><%= t ".time" %>: <i><%= l @order.updated_at %></i></b>
        <p>
          <p>
            <p><%= link_to t(".info_order"), cart_url(@order), data: { confirm: I18n.t("evaluators.alert.confirm_cancel")}, class: "btn btn-primary" %>
            </p>
          </p>
        </p>
      </td>
    </tr>
  </tbody>
</table>
