<%= provide :title, t(".title") %>
<%= provide :button, t(".Save") %>
<section id="form"><!--form-->
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <h2><%=  t ".title" %> <%= resource_name.to_s.humanize %></h2>
        <div class="signup-form">
          <%= render "form" %>
        </div>
          <h3><%= t ".cancel_account" %></h3>
          <p><%= t ".unhappy" %> <%= button_to t(".cancel_account"), registration_path(resource_name), data: { confirm: I18n.t(".alert.cancel_account")}, method: :delete, class: "btn btn-info" %></p>
          <%= link_to t(".back"), :back %>
      </div>
    </div>
  </div>
</section>
