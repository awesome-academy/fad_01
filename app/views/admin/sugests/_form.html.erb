<%= form_for @product , url: yield(:url) do |f| %>
  <div class="form-group">
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :price, placeholder: t("sugests.form.price"),
  class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.number_field :quantity,
    placeholder: t("sugests.form.quantity"), class: "form-control" %>
  </div>

  <div class="for-group">
    <%= f.text_area :description, placeholder: t("sugests.form.description"), class: "form-control"%>
  </div><br>

  <div class="form-group">
    <%= collection_select(:product, :category_id, load_categories, :id, :name, {prompt: true} ,{:class=>"form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button), class: "btn btn-info full-btn" %>
  </div>
<% end %>
