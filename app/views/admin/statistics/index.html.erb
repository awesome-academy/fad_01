<% content_for :content do %>
<div class="content">
  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="row">
            <div class="col-5 col-md-4">
              <div class="icon-big text-center icon-warning">
                <i class="nc-icon nc-globe text-warning"></i>
              </div>
            </div>
            <div class="col-7 col-md-8">
              <div class="numbers">
                <p class="card-category"><%= t ("dashboard.all_user") %></p>
                <p class="card-title"><%= User.all.size %><p>
              </div>
            </div>
          </div>
          <ul>
            <li>
              <div class="row">
                <div class="col-md-8 offset-md-2">Users activated:</div>
                <div class="col-md-2"><%= @users_activated %>/<%= User.all.size %></div>
              </div>
            </li>
            <li>
              <div class="row">
                <div class="col-md-8 offset-md-2">Users registed this month:</div>
                <div class="col-md-2"><%= @users_this_month %></div>
              </div>
            </li>
          </ul>
        </div>
        <div class="card-footer ">
          <hr>
          <div class="stats">
            <i class="fa fa-chevron-circle-right"></i>
            <%= link_to t("dashboard.detail"), admin_statistics_path %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="row">
            <div class="col-5 col-md-4">
              <div class="icon-big text-center icon-warning">
                <i class="nc-icon nc-money-coins text-success"></i>
              </div>
            </div>
            <div class="col-7 col-md-8">
              <div class="numbers">
                <p class="card-category"><%= t ("dashboard.all_order") %></p>
                <p class="card-title"><%= Order.all.size %><p>
              </div>
            </div>
          </div>
          <ul>
            <li>
              <div class="row">
                <div class="col-md-8 offset-md-2">Total Order this month:</div>
                <div class="col-md-2"><%= @orders_this_month %></div>
              </div>
            </li>
            <li>
              <div class="row">
                <div class="col-md-2">Revenue:</div>
                <div class="col-md-3">This month:</div>
                <div class="col-md-2"><%= number_to_currency @revenue_this_month %></div>
                <div class="col-md-1">Total:</div>
                <div class="col-md-2"><%= number_to_currency @revenue %></div>
              </div>
            </li>
          </ul>
        </div>
        <div class="card-footer ">
          <hr>
          <div class="stats">
            <i class="fa fa-chevron-circle-right"></i>
            <%= link_to t("dashboard.detail"), admin_statistics_path %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-6">
      <div class="card card-stats">
        <div class="card-body ">
          <div class="row">
            <div class="col-5 col-md-4">
              <div class="icon-big text-center icon-warning">
                <i class="nc-icon nc-vector text-danger"></i>
              </div>
            </div>
            <div class="col-7 col-md-8">
              <div class="numbers">
                <p class="card-category"><%= t ("dashboard.all_product") %></p>
                <p class="card-title"><%= @products.size %><p>
                    <p>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <h6 class="text-center">Best seller</h6>
              <table>
                  <tr>
                    <th class="col-md-4">Name</th>
                    <th class="col-md-4">Quantity</th>
                    <th class="col-md-4">Price</th>
                  </tr>
                  <% @stock_take.sort_by{|a, b, c| -b}.take(5).each do |product| %>
                  <tr>
                    <td class="col-md-4"><%= product[0] %></td>
                    <td class="col-md-4"><%= product[1] %></td>
                    <td class="col-md-4"><%= product[2] %></td>
                  </tr>
                  <% end %>
                </table>
            </div>
            <div class="col-md-6">
              <h6 class="text-center">High Total Price</h6>
              <table>
                <tr>
                  <th class="col-md-4">Name</th>
                  <th class="col-md-4">Quantity</th>
                  <th class="col-md-4">Price</th>
                </tr>
                <% @stock_take.sort_by{|a, b, c| -c}.take(5).each do |product| %>
                <tr>
                  <td class="col-md-4"><%= product[0] %></td>
                  <td class="col-md-4"><%= product[1] %></td>
                  <td class="col-md-4"><%= product[2] %></td>
                </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
        <div class="card-footer ">
          <hr>
          <div class="stats">
            <i class="fa fa-chevron-circle-right"></i>
            <%= link_to t("dashboard.detail"), admin_statistics_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render "chart" %>
</div>
<% end %>
<%= render "users/admin" %>