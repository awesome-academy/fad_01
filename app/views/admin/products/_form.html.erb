<%= form_for @product , url: yield(:url) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.file_field :picture, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :name, placeholder: t(".name")+" (*)", class:
      "form-control" %>
  </div>

  <div class="form-group">
    <%= f.number_field :price, placeholder: t(".price")+" (*)",
  class: "form-control"%>
  </div>


  <div class="form-group">
    <%= f.number_field :quantity,
    placeholder: t(".quantity")+" (*)", class: "form-control" %>
  </div>

  <div class="for-group">
    <%= f.text_area :description, placeholder: t(".description"), class: "form-control" %>
  </div><br>

  <div class="form-group">
    <%= collection_select(:product, :category_id, categories, :id, :name, {prompt: true} ,{:class=>"form-control"}) %>
  </div>

  <div class="form-group">
    <%= f.submit yield(:button), class: "btn btn-info form-control" %>
  </div>
<% end %>
