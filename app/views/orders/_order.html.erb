 <table class="table table-striped">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".quantity" %></th>
      <th><%= t ".subtotal" %></th>
      <th><%= t ".status" %></th>
    </tr>
  </thead>
  <tbody>
    <% order.order_items.each do |ot| %>
    <tr>
      <td><%= ot.product.name %></td>
      <td><%= ot.quantity %></td>
      <td><%= ot.subtotal %></td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
    <tr>
      <td colspan="3">
        <b>Total price: </b>
        <span><%= order.total_price %></span>
        <p>
          <% if order.confirm? %>
            <%= link_to t(".cancel"), history_order_path(order), method: :put, data: { confirm: I18n.t("evaluators.alert.confirm_cancel")}, class: "btn btn-primary" %>
          <% else %>
            <b><%= t ".time" %>: <i><%= I18n.localize order.updated_at %></i></b>
          <% end %>
        </p>
      </td>
    </tr>
  </tbody>
</table>
