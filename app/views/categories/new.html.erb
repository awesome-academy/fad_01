<%= provide :title, t("sugests.title") %>
<%= provide :button, t("sugests.button") %>
<%= provide :url, categories_path(@category) %>
<div id="contact-page" class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="contact-form">
        <h2 class="title text-center"><%= t("label.cr_suggestion")%></h2>
        <div class="col-md-6 col-md-offset-3">
          <%= form_for @category , url: yield(:url) do |f| %>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit yield(:button), class: "btn btn-info full-btn" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
